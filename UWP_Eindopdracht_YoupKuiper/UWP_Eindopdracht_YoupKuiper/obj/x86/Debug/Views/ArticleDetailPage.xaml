<Page x:ConnectionId='1'
    x:Class="UWP_Eindopdracht_YoupKuiper.Views.ArticleDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_Eindopdracht_YoupKuiper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="auto">

        <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
      

            <Image x:ConnectionId='2' x:Name="image" RelativePanel.AlignTopWithPanel="True" Height="300"                                     />

            <TextBlock x:ConnectionId='3' x:Name="title" FontWeight="Bold" TextWrapping="WrapWholeWords" RelativePanel.Below="image"                                   />

            <TextBlock x:ConnectionId='4' x:Name="summary" TextWrapping="WrapWholeWords" RelativePanel.Below="title" Grid.Row="2"                                     />
            <TextBlock x:ConnectionId='5' x:Name="url" TextWrapping="Wrap" RelativePanel.Below="summary">
                <Hyperlink x:ConnectionId='6'                                        >Volledig artikel hier</Hyperlink>
            </TextBlock>
        </RelativePanel>
    </ScrollViewer>

</Page>

